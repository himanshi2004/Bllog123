<%- include('../../header.ejs')  %>
<section class="dashboard-wrap mtb-40">
    <div class="container">
        <div class="body-content">
            <div class="row">
                <div class="col-md-3">
                    <div class="dash-left">
                        <ul>
                            <li class="active"><a href="dashboard.html">Dashboard</a></li>
                            <li><a href="admin-blog-list.html">Blogs</a></li>
                            <li><a href="/admin/About/displayabout"> Display About</a></li>
                            <li><a href="#">Categories</a></li>
                            <li><a href="#">Pages</a></li>
                            <li><a href="/logout">Logout</a></li>
                        </ul>
                    </div>   
                </div>
                <div class="col-md-9">
                    <div class="dash-right">
                        <div class="dash-header">
                          <div class="dash-title">
                              <h1>Edit  Blog</h1>
                          </div>
                        </div>
                        <div class="blog-form">
                          <form action="/admin/blog/updateblog/<%= data._id %>" method="post" enctype="multipart/form-datas">
                            <div class="form-group form-row">
                                <label class="col-md-3">Title <span class="required">*</span></label>
                                <div class="col-md-9">
                                  <input type="text" class="form-control"  name="title"
                                  placeholder="Title" required value="<%= data.title %>">
                                </div>
                            </div>
                         
                      
             
                            <div class="form-group form-row">
                                <label class="col-md-3">Description <span class="required">*</span></label>
                                <div class="col-md-9">
                                  <textarea name="description" rows="5" class="form-control" placeholder="Description" required><%= data.description %></textarea>
                                </div>
                            </div>
                                           <div class="form-group form-row">
                              <label class="col-md-3">Upload Image</label>
                              <div class="col-md-9">
                                <input type="file" id="image" name="image"  />
                                <img src="<%= data.image.url %>" width="50" alt="">
                              </div>
                           
                            </div>
                            <div class="form-group form-row">
                                <label class="col-md-3"></label>
                                <div class="col-md-9">
                                  <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </div>
                          </form>
                        </div>
                    </div>   
                </div>
            </div>
        </div>
    </div>
</section>
<%- include('../../footer.ejs') %>